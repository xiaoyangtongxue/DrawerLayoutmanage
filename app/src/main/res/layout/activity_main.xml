<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.bwie.drawerlayoutmanager.MainActivity">


    <RelativeLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rela"
            android:background="#379392"
            android:layout_width="match_parent"
            android:layout_height="70dp">




        </RelativeLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager22"
            android:layout_above="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rela"
            >

        </android.support.v4.view.ViewPager>

  <RadioGroup
      android:id="@+id/radio"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      >
      <RadioButton
          android:id="@+id/btn"
          android:drawableTop="@mipmap/bottom_home"
          android:text="33"
          android:button="@null"







          android:gravity="center"
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <RadioButton
          android:id="@+id/btn2"
          android:drawableTop="@mipmap/bottom_read"
          android:gravity="center"
          android:text="22"
          android:button="@null"
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <RadioButton
          android:id="@+id/btn3"
          android:gravity="center"
          android:text="11"
          android:button="@null"
          android:drawableTop="@mipmap/bottom_me"
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
  </RadioGroup>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:layout_gravity="left"
        android:orientation="vertical">
        <ImageView
            android:src="@mipmap/timg"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            />
